<div>
  <div>
    <h1>
      All boards
    </h1>
  </div>
</div>

<hr>
<h2>Add a new board</h2>

<form action="/insert_board" method="post">
  <div>
    <label for="name_field">Name</label>
    <input id="name_field" type="text" name="query_name">
  </div>

  <button>
    Add board
  </button>
</form>

<hr>

<ul>
  <% @list_of_boards.each do |a_board| %>
    <li>
    <a href="/boards/<%= a_board.id %>"><%= a_board.name %></a>
    </li>
    <% end %>
</ul>
